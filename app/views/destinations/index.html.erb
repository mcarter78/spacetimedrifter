<div id="scrollfix">
  <div id="main-content">
    <h1>Destinations:</h1>
    <ul class="index">

    <% @dests.each do |dest| %>
      <li>
        <%= image_tag("#{dest.name}.png", alt: "#{dest.name} avatar", id: "planet-avatar") %>
        <%= link_to "#{dest.name}", dest, method: :get %>
        <span id="posts-span">  Posts: <%= dest.posts.count %></span></li>
    <% end %>
  </div>
</div>
