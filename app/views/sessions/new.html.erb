<div id="scrollfix">
  <div id="main-content">
    <h1>Welcome Back, Drifter!</h1>
    <div id="sign-in">
      <%= form_for @user, url: "/sessions", method: "post" do |f| %>
        <div>
          <%= f.text_field :email, placeholder: "Email", autocomplete: "off" %>
        </div>
        <div>
          <%= f.password_field :password, placeholder: "Password" %>
        </div>
        <%= f.submit "Sign In", id: "post-button" %>
      <% end %>
      <% flash.each do |message_type, message| %>
            <div class="flash <%= message_type %>"><%= message %></div>
      <% end %>
    </div>
  </div>
</div>
